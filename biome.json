{
    "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "includes": ["src/**/*"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 160
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "useIterableCallbackReturn": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "html": {
        "parser": {
            "interpolation": true
        },
        "formatter": {
            "selfCloseVoidElements": "always"
        }
    },
    "css": {
        "linter": {
            "enabled": true
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "overrides": [
        {
            "includes": ["./src/styles.css"],
            "linter": {
                "rules": {
                    "correctness": {
                        "noUnknownProperty": "off"
                    },
                    "suspicious": {
                        "noUnknownAtRules": "off"
                    }
                }
            }
        }
    ]
}
