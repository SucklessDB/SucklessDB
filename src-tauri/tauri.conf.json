{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "SucklessDB",
    "version": "0.1.0",
    "identifier": "com.sucklessdb.dev",
    "build": {
        "frontendDist": "../dist/Sucklessdb/browser",
        "devUrl": "http://localhost:4200",
        "beforeDevCommand": "pnpm fe:dev",
        "beforeBuildCommand": "pnpm fe:build"
    },
    "app": {
        "windows": [
            {
                "title": "SucklessDB",
                "width": 1200,
                "height": 900,
                "minWidth": 900,
                "minHeight": 800,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
